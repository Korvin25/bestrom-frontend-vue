{
  "name": "bestrom-frontend-vue",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "axios": "^0.21.4",
    "core-js": "^3.6.5",
    "jshint": "^2.13.1",
    "source-map": "^0.7.3",
    "source-map-js": "^1.0.1",
    "vue": "^3.0.0",
    "vue-router": "^4.0.11",
    "vue3-carousel": "=0.1.29",
    "vue3-smooth-scroll": "^0.8.1",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-standard": "^5.1.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.28.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^8.1.1",
    "prettier": "^2.4.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true
    },
    "extends": [
        "plugin:vue/vue3-recommended",
        "@vue/prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module",
        "parser": "babel-eslint"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "endOfLine": "auto",
                "tabWidth": 1,
                "useTabs": true,
                "semi": false,
                "singleQuote": true,
                "jsxBracketSameLine": true,
                "jsxSingleQuote": true,
                "printWidth": 100,
                "trailingComma": "all"
            }
        ],
        "vue/no-multiple-template-root": 0
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
