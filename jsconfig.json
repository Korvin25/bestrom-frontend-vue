{
    "compilerOptions": {
        "sourceMap": true,
        "allowJs": true,
        "target": "esnext",
        "moduleResolution": "Node",
        "module": "esnext",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "baseUrl": ".",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext",
            "ScriptHost"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}